<script>
    function del(id) {
        console.log(id)
        swal({
            title: "ต้องการลบ " + id + " จริงหรือไม่ ?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("ลบสำเร็จ", {
                        icon: "success",
                    }).then(() => window.location.href = "/studentEdit/delete/" + id);
                }
            });
        
    }

    function upd(id) {
        console.log(id)
        // window.location.href ="/instructorEdit/update/" +id;
    }

    function add() {
        window.location.href = "/addStudentEdit";
    }

    if ("<%= status %>" == 1) {
        swal("Oops", "<%= message %>", "error").then(() => window.location.href = "/studentEdit")
        message = "";
        status = 0;
        // window.location.href = "/studentEdit"

    } else if ("<%= status %>" == 2) {
        swal("Success", "<%= message %>", "success").then(() => window.location.href = "/studentEdit")
        message = "";
        status = 0;
        // window.location.href = "/studentEdit"
    }

    function showDetail(id, firstname, lastname, faculty, branch, year) {
        document.getElementById("id").value = id;
        document.getElementById("firstname").value = firstname;
        document.getElementById("lastname").value = lastname;
        document.getElementById("faculty").value = faculty;
        document.getElementById("branch").value = branch;
        document.getElementById("year").value = year;
    }

</script>