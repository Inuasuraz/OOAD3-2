    <section style="margin-top:10%">
        <div class="container">
            <form class="form">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search" aria-label="Search"
                        style="padding-left: 20px; border-radius: 40px;" id="mysearch">
                    <div class="input-group-addon"
                        style="margin-left: 5px; z-index: 3; border-radius: 40px; background-color: transparent; border:none;">
                        <button class="btn btn-warning btn-sm" type="submit"
                            style="border-radius: 20px;transform: translateY(10%)" id="search-btn"><i
                                class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>

        <br>


        <!---------------------------- form ------------------------------>

        <div class="container" style="background-color: rgb(0, 0, 0,0.6) ; color: #FF9900; border-radius: 20px">
            <br>
            <form method="post" action="/roomEdit/submit/<%=data[0].name%>">
                <div class="form-row">
                    <div class="col-md-4 mb-3">
                            <label for="validationCustom00">วัน</label>
                            <select class="browser-default custom-select" required name="day" id="validationCustom00">
                                    <option selected value="">เลือกวัน</option>
                                    <option value="monday">วันจันทร์</option>
                                    <option value="tuesday">วันอังคาร</option>
                                    <option value="wednesday">วันพุธ</option>
                                    <option value="thursday">วันพฤหัสบดี</option>
                                    <option value="friday">วันศุกร์</option>
                                    <option value="saturday">วันเสาร์</option>
                                    <option value="sunday">วันอาทิตย์</option>
                                  </select>
                    </div>
                    

                    <div class="col-md-4 mb-3">
                        <label for="validationCustom01">เวลา</label>
                        <select class="browser-default custom-select" required name="time" id="validationCustom01">
                        <option selected value="">เลือกเวลา</option>
                        <option value="q1">8.00-10.00</option>
                        <option value="q2">10.00-12.00</option>
                        <option value="q3">13.00-15.00</option>
                        <option value="q4">15.00-17.00</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                            <p style="float:right;font-size: 36px;color: #FF9900">ห้อง: <%=data[0].name%></p>   
                    </div>
                    
                </div>

                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label for="validationCustom02">รหัสวิชา</label>
                        <input type="text" class="form-control" id="validationCustom02" placeholder="รหัสวิชา" required name="num">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="validationCustom03">ชื่อวิชา</label>
                        <input type="text" class="form-control" id="validationCustom03" placeholder="ชื่อรายวิชา" required name="sub">
                    </div>

                    <div style="margin-left: 23%; margin-top: 3%">
                        <button type="submit" class="btn btn-info add-new" style="background-color: #FF9900 ; border: #FF9900" onclick="window.location.reload()">
                            <i class="fa fa-plus"></i> 
                            Add New
                        </button>
                    </div>
                </div>

            </form>
             <!-------------------- table ---------------------->

             <table class="table table-hover" style="background-color:white">
                <thead>
                    <tr>
                        <th scope="col" style="width:20%">วัน</th>
                        <th scope="col" style="width:20%">8.00-10.00</th>
                        <th scope="col" style="width:20%">10.00-12.00</th>
                        <th scope="col" style="width:20%">13.00-15.00</th>
                        <th scope="col" style="width:20%">15.00-17.00</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <th scope="row">วันจันทร์</th>
                            <td><%= data[0].monday[0].num %> <br> <%= data[0].monday[0].sub %></td>
                            <td><%= data[0].monday[1].num %> <br> <%= data[0].monday[1].sub %></td>
                            <td><%= data[0].monday[2].num %> <br> <%= data[0].monday[2].sub %></td>
                            <td><%= data[0].monday[3].num %> <br> <%= data[0].monday[3].sub %></td>
                        </tr>

                        <tr>
                            <th scope="row">วันอังคาร</th>
                            <td><%= data[0].tuesday[0].num %> <br> <%= data[0].tuesday[0].sub %></td>
                            <td><%= data[0].tuesday[1].num %> <br> <%= data[0].tuesday[1].sub %></td>
                            <td><%= data[0].tuesday[2].num %> <br> <%= data[0].tuesday[2].sub %></td>
                            <td><%= data[0].tuesday[3].num %> <br> <%= data[0].tuesday[3].sub %></td>
                        </tr>
                        <tr>
                            <th scope="row">วันพุธ</th>
                            <td><%= data[0].wednesday[0].num %> <br> <%= data[0].wednesday[0].sub %></td>
                            <td><%= data[0].wednesday[1].num %> <br> <%= data[0].wednesday[1].sub %></td>
                            <td><%= data[0].wednesday[2].num %> <br> <%= data[0].wednesday[2].sub %></td>
                            <td><%= data[0].wednesday[3].num %> <br> <%= data[0].wednesday[3].sub %></td>
                        </tr>
                        <tr>
                            <th scope="row">วันพฤหัสบดี</th>
                            <td><%= data[0].thursday[0].num %> <br> <%= data[0].thursday[0].sub %></td>
                            <td><%= data[0].thursday[1].num %> <br> <%= data[0].thursday[1].sub %></td>
                            <td><%= data[0].thursday[2].num %> <br> <%= data[0].thursday[2].sub %></td>
                            <td><%= data[0].thursday[3].num %> <br> <%= data[0].thursday[3].sub %></td>
                        </tr>
                        <tr>
                            <th scope="row">วันศุกร์</th>
                            <td><%= data[0].friday[0].num %> <br> <%= data[0].friday[0].sub %></td>
                            <td><%= data[0].friday[1].num %> <br> <%= data[0].friday[1].sub %></td>
                            <td><%= data[0].friday[2].num %> <br> <%= data[0].friday[2].sub %></td>
                            <td><%= data[0].friday[3].num %> <br> <%= data[0].friday[3].sub %></td>
                        </tr>
                        <tr>
                            <th scope="row">วันเสาร์</th>
                            <td><%= data[0].saturday[0].num %> <br> <%= data[0].saturday[0].sub %></td>
                            <td><%= data[0].saturday[1].num %> <br> <%= data[0].saturday[1].sub %></td>
                            <td><%= data[0].saturday[2].num %> <br> <%= data[0].saturday[2].sub %></td>
                            <td><%= data[0].saturday[3].num %> <br> <%= data[0].saturday[3].sub %></td>
                        </tr>
                        <tr>
                            <th scope="row">วันอาทิตย์</th>
                            <td><%= data[0].sunday[0].num %> <br> <%= data[0].sunday[0].sub %></td>
                            <td><%= data[0].sunday[1].num %> <br> <%= data[0].sunday[1].sub %></td>
                            <td><%= data[0].sunday[2].num %> <br> <%= data[0].sunday[2].sub %></td>
                            <td><%= data[0].sunday[3].num %> <br> <%= data[0].sunday[3].sub %></td>
                        </tr>
                </tbody>
            </table>



            <br>

        </div>

