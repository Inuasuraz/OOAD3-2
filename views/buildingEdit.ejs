    <title>Building Edit</title>
</head>

<body style="background-image: url(/img/background2.png)">

    <nav class="navbar navbar-expand-md navbar-dark fixed-top" id="banner"
        style="background-color: #1B1B1B;height:60px">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="/mainPage"><img src="/img/icon.png" style="height:50px"></a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-user"></i> &nbsp; <%= username %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-sign-out-alt"></i> &nbsp; log out</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- <div class="banner">
        <div class="container">
            <div class="banner-text">


            </div>
        </div>
    </div> -->
    <section style="margin-top:10%">
        <div class="container">
            <form class="form">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search" aria-label="Search"
                        style="padding-left: 20px; border-radius: 40px;" id="mysearch">
                    <div class="input-group-addon"
                        style="margin-left: 5px; z-index: 3; border-radius: 40px; background-color: transparent; border:none;">
                        <button class="btn btn-warning btn-sm" type="submit"
                            style="border-radius: 20px;transform: translateY(10%)" id="search-btn"><i
                                class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>

        <br>


        <!---------------------------- form ------------------------------>

        <div class="container" style="background-color: rgb(0, 0, 0,0.6) ; color: #FF9900; border-radius: 20px">
            <br>
             <!-------------------- table ---------------------->

             <table class="table table-hover" style="background-color:white">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ห้อง</th>
                        <th scope="col">ประเภทห้อง</th>
                        <th scope="col">ตัวเลือก</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <% for(let i=0; i < data.length; i++) {%>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].roomType %></td>
                        <td>
                            <a class="edit" title="Edit" data-toggle="tooltip" href="roomEdit/<%= data[i].name %>"><i class="material-icons">&#xE254;</i></a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>



            <br>

        </div>

        <br>
        </div> <!-- /container -->



    </section>


    <!-- navbar -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">

            <div id="sidebar-wrapper" class="sidebar-toggle">

                <div class="left">
                    <div class="item active">
                        <i class="fas fa-fw fa-user-circle"></i> ข้อมูลนิสิต
                    </div>
                    
                    <a href="/studentEdit" style="text-decoration: none"><div class="item">
                            <i class="fas fa-user-graduate"></i> จัดการนิสิต
                    </div></a>
                    <a href="/instructorEdit" style="text-decoration: none"><div class="item">
                            <i class="fas fa-user-graduate"></i> จัดการอาจารย์
                    </div></a>
                    <a href="/buildingEdit" style="text-decoration: none"><div class="item">
                        <i class="fas fa-building"></i> จัดการตึก
                    </div></a>
                    <div class="item">
                            <i class="fas fa-tools"></i> จัดการห้องสอบ
                    </div>
                    <div class="item">
                            <i class="fas fa-chair"></i> จัดการที่นั่งสอบ
                    </div>
                    <div class="item">
                            <i class="fas fa-print"></i> พิมพ์ใบเช็คชื่อ
                    </div>
                    <div class="item">
                            <i class="fas fa-user-check"></i> เช็คชื่อนิสิต
                    </div>
                </div>


            </div>
        </div>
    </nav>




</body>

</html>

